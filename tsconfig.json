{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "types": [
            "webpack-env",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@haboo/haboo-sdk": [
                "src/sdk"
            ]
        },
        "lib": [
            "es2015",
            "dom"
        ],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}